# OpenAI API Configuration
VITE_OPENAI_API_KEY=your_openai_api_key_here

# API Base URLs (if needed)
VITE_API_BASE_URL=http://localhost:3000

# Feature Flags
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_VOICE_FEATURES=true

# Optional Analytics Configuration
VITE_ANALYTICS_ID=your_analytics_id_here

# Optional Third-party Service Keys
VITE_WEATHER_API_KEY=your_weather_api_key_here  # For location-based recommendations
VITE_NUTRITION_DB_API_KEY=your_nutrition_db_api_key_here  # For food database access

# Security Configuration
VITE_API_TIMEOUT=30000
VITE_MAX_REQUESTS_PER_MIN=60

# Note: This is an example file. Create a .env file with your actual values.
# Never commit your actual .env file to version control. 